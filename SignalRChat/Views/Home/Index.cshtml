@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="width:450px" ng-controller="mainCtrl">
    <div class="panel panel-info" style="margin-top:30px; margin-left:20px">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-4"><h3 class="panel-title">Real Time Chat</h3></div>
                <div class="col-sm-8">
                    <input ng-hide="inRoom" ng-model="roomName" type="text" class="form-control input-sm pull-left" style="width:60%" placeholder="room" autofocus />
                    <button ng-hide="inRoom" ng-click="joinRoom()" class="btn btn-primary btn-sm pull-right">Join Room</button>
                    <button ng-show="inRoom" ng-click="leaveRoom()" class="btn btn-warning btn-sm pull-right">Leave Room</button>
                </div>
            </div>
        </div>

        <div class="panel-body">
            <div class="scrollable">
                <div ng-repeat="msg in messages">{{msg.message}}</div>
            </div>
            <div>
                <input ng-show="nameSet" ng-model="newMessage" class="form-control input-sm pull-left" style="width:80%" type="text" placeholder="chat message" />
                <button ng-show="nameSet" ng-click="sendMessage()" class="pull-right btn btn-primary btn-sm">Send</button>
                <input ng-hide="nameSet" ng-model="name" class="form-control input-sm pull-left" style="width:80%" type="text" placeholder="your name" />
                <button ng-hide="nameSet" ng-click="setName()" class="pull-right btn btn-primary btn-sm">Set</button>
            </div>

        </div>
    </div>
</div>